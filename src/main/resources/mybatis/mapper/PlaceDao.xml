<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.himedia.tp01.dao.IPlaceDao">
    <select id = "selectBestList" resultType="com.himedia.tp01.dto.PlaceVO">
        select * from bestplace_view
    </select>

    <select id = "selectHotList" resultType="com.himedia.tp01.dto.PlaceVO">
        select * from hotplace_view
    </select>

    <select id="getPlace" resultType="com.himedia.tp01.dto.PlaceVO">
        select * from place where place_seq=#{param1}
    </select>

    <select id="getAllCount" resultType="_int">
        select count(*) from place;
    </select>

    <select id="getPlaceList" resultType="com.himedia.tp01.dto.PlaceVO" parameterType="com.himedia.tp01.dto.Paging">
        select * from place order by place_seq desc limit #{displayRow} offset #{startNum}
    </select>


</mapper>